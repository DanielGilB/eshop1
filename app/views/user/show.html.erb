<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Nombre de usuario</dt>
  <dd><%= @user.login %></dd>

  <dt>Correo electrónico</dt>
  <dd><%= @user.email %></dd>

  <dt>Número de inicios de sesión</dt>
  <dd><%= @user.login_count %></dd>

  <dt>Última petición</dt>
  <dd><%= @user.last_request_at %></dd>

  <% if @user.last_login_at %>
    <dt>Último inicio de sesión</dt>
    <dd><%= @user.last_login_at %></dd>
  <% end %>

  <dt>Sesión iniciada desde</dt>
  <dd><%= @user.current_login_at %></dd>

  <% if @user.last_login_ip %>
    <dt>IP del último inicio de sesión</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>IP del inicio de sesión actual</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
