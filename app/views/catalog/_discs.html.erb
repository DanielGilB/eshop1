<dl id = 'discs'>
  <% for disc in @discs %>
    <dt>
      <%= link_to disc.title, :action => 'show', :id => disc %>
      <%= link_to '(Añadir al carrito)', :controller => 'cart', :action => 'add', :id => disc %>
    </dt>
    <% for artist in disc.artists %>
      <dd><%= artist.first_name %> <%= artist.last_name %></dd>
    <% end %>
    <dd><%= sprintf("Precio: %.2f €", disc.price) %> </dd>
    <dd><small>Productora: <%= disc.producer.name %></small></dd>
  <% end %>
</dl>
