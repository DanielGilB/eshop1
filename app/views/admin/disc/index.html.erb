<table>
  <tr>
    <th><a href="?sort_by=producer_id">Productor</a></th>
    <th><a href="?sort_by=title">Título</a></th>
    <th><a href="?sort_by=serial_number">Número de serie</a></th>
    <th colspan="3"></th>
  </tr>

<% @discs.each do |disc| %>
  <tr>
    <td><%= h disc.producer.name %></td>
    <td><%= h disc.title %></td>
    <td><%= h disc.serial_number %></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => disc %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => disc  %></td>
    <td><%= button_to 'Borrar', { :action => 'destroy', :id => disc },
                      data: { confirm: "¿Seguro que quieres eliminar el disco #{disc.title}?" } %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @discs, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Pagina anterior', :next_label => 'Siguiente pagina' %>
<p><%= link_to 'Añadir un nuevo disco', :action => 'new' %></p>
